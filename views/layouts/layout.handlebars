    </center>

    
    <script src="/js/ajaxpopper.min.js"></script>
    <script src="/js/bootstrap.min.js"></script>
    

    <script>
      var upd = setInterval(()=>{
        var cd = new Date();
        console.log(cd);
        cd = cd.toString();
        cd = cd.split(" GMT");
        document.getElementById('st').innerHTML = cd[0]+"<br />"+"GMT"+cd[1];
      }, 500);

      var x = $(".body");
      x.css("min-height", screen.height);



    </script>

  </body>

  

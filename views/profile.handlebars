


<div class="container bg-light" style="padding:30px;margin:10px">
    <div class="row">
        <div class="col-sm-6 text-right font-weight-bold">
            Username: 
        </div>
        <div class="col-sm-6 text-left">
            {{username}}
        </div>
    </div>
    <div class="row">
        <div class="col-sm-6 text-right font-weight-bold">
            Rating: 
        </div>
        <div class="col-sm-6 text-left">
            {{rating}}
        </div>
    </div>
    <div class="row">
        <div class="col-sm-6 text-right font-weight-bold">
            MIS: 
        </div>
        <div class="col-sm-6 text-left">
            {{mis}}
        </div>
    </div>
    <br />
    <center>
        <table class="performance" border="1px solid #000">
        {{#if participation}}
            <tr>
            <th>Contest Code</th>
            <th>Rank</th>
            <th>oldrating</th>
            <th>Newrating</th>
            </tr>
        
            {{#each userdata}}
            <td>{{this.code}}</td>
            <td>{{this.rank}}</td>
            <td>{{this.oldrating}}</td>
            <td>{{this.newrating}}</td>
            {{/each}}
        {{else}}
            <br />
            <br />
            No Contest Participation data
        {{/if}}
        </table>
    
        <br />
        <br />
        <div class="container" style="margin-top:20px">
            <div class="row">
                <div class="col-sm-12">
                    <a href = "/users/submissions/{{username}}/submissions/1" style="color:#fff;">
                        <div class = "card text-center">
                            <div class="card-body">
                                Submissions
                            </div>
                        </div>
                    </a>
                </div>
            </div>
        </div>
    </center>

</div>


			<br />

			<h id = "ml">Memory Limit (MB): </h>
			<z id = "mlc"></z>
			<br />
		</div>
	</div>
	<div class="row align-items-center text-dark" style="margin-top:20px; line-height:4; padding:20px; background: rgb(218, 216, 216);">
		<div class="col-sm-12">
			<h id = "set" class="h5">Setter: </h>
			<z id = "setc"></z>
			<br />

			<h id = "test" class="h5">Tester: </h>
			<z id = "testc"></z>
			<br />

			<h id = "datea" class="h5">Date Added: </h>
			<z id = "datec"></z>
			<br />
			
			
			
		</div>
	</div>
</div>
<br />
<br />



<div class="btn btn-dark"> <a href="/contests/contest/{{CCode}}/submit/{{CPCode}}" style="color:white">Submit Code</a></div>




<script src="/js/ajax.js"></script>
<script>
	
            
	
	$(document).ready(function(){
		
		var path = '/contests/getprobmain/{{CPCode}}';
		console.log(path);
		$.ajax({
            url: '/contests/getprobmain/{{CPCode}}',
            success: function(res) {
                
				
				var data = JSON.parse(res.obj);
				console.log(data);
				$("#statec").html('');
				$("#statec").append(data.statement);
				$("#inpc").html('');
				$("#inpc").append(data.input);
				$("#outc").html('');
				$("#outc").append(data.output);
				
            
            }
        });
		
	});

	$(document).ready(function(){
		$.ajax({
			url: '/contests/getprobdetails/{{CPCode}}',
            success: function(res) {
                
				
				var data = JSON.parse(res.obj);
				console.log(data);
				$("#probCodec").html('');
				$("#probCodec").append(data.probCode);
				$("#setc").html('');
				$("#setc").append(data.probSetter);
				$("#testc").html('');
				$("#testc").append(data.probSetter);
				$("#datec").html('');
				$("#datec").append(data.dateAdded);
				$("#tlc").html('');
				$("#tlc").append(data.tl);
				$("#mlc").html('');
				$("#mlc").append(data.ml);
				$("#scoc").html('');
				$("#scoc").append(data.score);
            }
        });
	});
	
	
</script>
